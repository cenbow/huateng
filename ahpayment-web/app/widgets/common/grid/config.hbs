<div class="modal w300" id="js-gird-config-panel">
    <div class="modal-header">
        <button type="button" class="close">&times;</button>
        <h4>表格设置</h4>
    </div>
    <div class="modal-body">
        <form id="js-grid-setting-form">
            <div class="row-fluid">
                <div class="span2">行:</div>
                <div class="span8">
                    <span class="slider js-slider"></span>
                </div>
                <div class="span2">
                    <input type="text" name="0" class="input-min number" data-min="1" data-max="20" value="2">
                </div>
            </div>
            <div class="row-fluid">
                <div class="span2">列:</div>
                <div class="span8">
                    <span class="slider js-slider"></span>
                </div>
                <div class="span2">
                    <input type="text" name="1" class="input-min number" data-min="1" data-max="12" value="2">
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" id="js-grid-ok">确定</button>
    </div>
</div>

<div class="modal w300" id="js-line-v-setting-panel">
    <div class="modal-header">
        <button type="button" class="close">&times;</button>
        <h4>垂直线条设置</h4>
    </div>
    <div class="modal-body">
        <div class="js-arguments" id="border-left">
            <div class="row-fluid">
                <div class="span2">宽度:</div>
                <div class="span8">
                    <span class="slider js-slider"></span>
                </div>
                <div class="span2">
                    <input type="text" name="0" class="input-min" data-min="1" data-max="20" value="1">
                    <input type="hidden" name="1" value="solid"/>
                </div>
            </div>
            <div class="row-fluid color-row">
                <div class="span2">颜色:</div>
                <div class="span10">
                    <input type="text" name="2" class="number input-mini js-color-picker"/>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a class="btn btn-primary cancel">OK</a>
    </div>
</div>

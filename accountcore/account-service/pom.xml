<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>com.huateng.p3.account</groupId>
        <artifactId>accountcore</artifactId>
        <version>0.0.1-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>account-service</artifactId>
    <dependencies>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-test</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.huateng.p3.account</groupId>
            <artifactId>account-common</artifactId>
            <version>0.0.1-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.huateng.p3.account</groupId>
            <artifactId>account-service-api</artifactId>
            <version>0.0.1-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.huateng.p3.account</groupId>
            <artifactId>account-risk-api</artifactId>
            <version>0.0.1-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.huateng.p3.account</groupId>
            <artifactId>account-inner</artifactId>
            <version>0.0.1-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.huateng.p3.account</groupId>
            <artifactId>account-persistence</artifactId>
            <version>0.0.1-SNAPSHOT</version>
        </dependency>
    </dependencies>
    <build>
		<finalName>account-service</finalName>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>2.1</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<transformers>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
									<mainClass>com.huateng.p3.account.startup.AccountServiceStart</mainClass>
								</transformer>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
									<resource>META-INF/spring.handlers</resource>
								</transformer>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
									<resource>META-INF/spring.schemas</resource>
								</transformer>
							</transformers>
							<filters>
								<filter>
									<artifact>*:*</artifact>
									<excludes>
									<exclude>META-INF/*.SF</exclude>
									<exclude>META-INF/*.DSA</exclude>
									<exclude>META-INF/*.RSA</exclude>
								</excludes>
								</filter>
							</filters>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>2.7</version>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<!--本地环境  -->
			<id>local</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<build>
				<filters>
					<filter>${basedir}/src/main/filter/local.properties</filter>
				</filters>
			</build>
		</profile>
		<profile>
			<!--开发环境  -->
			<id>development</id>
			<build>
				<filters>
					<filter>${basedir}/src/main/filter/development.properties</filter>
				</filters>
			</build>
		</profile>
		<profile>
			<!--生产环境  -->
			<id>product</id>
			<build>
				<filters>
					<filter>${basedir}/src/main/filter/product.properties</filter>
				</filters>
			</build>
		</profile>
		<profile>
			<!--准生产环境  -->
			<id>assproduct</id>
			<build>
				<filters>
					<filter>${basedir}/src/main/filter/assproduct.properties</filter>
				</filters>
			</build>
		</profile>
		<profile>
			<!--测试环境  -->
			<id>test</id>
			<build>
				<filters>
					<filter>${basedir}/src/main/filter/test.properties</filter>
				</filters>
			</build>
		</profile>
		<profile>
			<!--压力测试环境  -->
			<id>stresstest</id>
			<build>
				<filters>
					<filter>${basedir}/src/main/filter/stresstest.properties</filter>
				</filters>
			</build>
		</profile>
		<profile>
			<!--速通测试环境  -->
			<id>sutongtest</id>
			<build>
				<filters>
					<filter>${basedir}/src/main/filter/sutongtest.properties</filter>
				</filters>
			</build>
		</profile>
	</profiles>
</project>